<!DOCTYPE html>
<html lang="en">
<head>

  <!-- Basic Page Needs
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta charset="utf-8">
  <title>Liste projets</title>
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- Mobile Specific Metas
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- FONT
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">

  <!-- CSS
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="stylesheet" href="/css/normalize.css">
  <link rel="stylesheet" href="/css/skeleton.css">

  <!-- Favicon
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="icon" type="image/png" href="/images/favicon.png">

</head>
<body>
<div class="row">
<div class="column">
<h4> Liste des projets </h4>
<a class="button button-primary" href="/projects/add">Ajouter</a>
</div>
</div>
{% if projects %}
    <div class="row">
      <div class="column">
        <table class="u-full-width">
          <thead>
            <tr>
              <th>Nom du projet</th>
              <th>Description</th>
              <th>Date de début</th>
              <th>Date de fin</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
{% for project in projects %}
      <tbody>
          <tr>
              <td>{{ project.getName }}</td>
              <td>{{ project.getDescription }}</td>
              <td>{{ project.getStartDate|date("d/m/Y") }}</td>
              <td>{{ project.getEndDate|date("d/m/Y") }}</td>
              <td><a href="/projects/{{ project.getId }}/user" class="button button-primary">Ajouter un utilisateur</a></td>
              <td><a href="/project/{{ project.getId }}/tasks" class="button button-primary">Ajouter une tâche</a></td>
              <td><a href="/projects/edit/{{ project.getId }}" class="button button-primary">Modifier</a></td>
          </tr>
      </tbody>
{% endfor %}
         </tbody>
        </table>
      </div>
    </div>
{% endif %}
<a class="button button-primary" href="/users">Utilisateurs</a>
</body>
</html>