<body>
<div class="row">
<div class="column">
<h4> Liste des projets </h4>
<a class="button button-primary" href="/projects/add">Ajouter</a>
</div>
</div>
{% if projects %}
    <div class="row">
      <div class="column">
        <table class="u-full-width">
          <thead>
            <tr>
              <th>Nom du projet</th>
              <th>Description du projet</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
     {% for project in projects %}
          <tr>
              <td>{{ project.getName }}</td>
              <td>{{ project.getDescription }}</td>
              
              </td>
            </tr>
{% endfor %}
          </tbody>
        </table>
      </div>
    </div>
{% endif %}
<a class="button button-primary" href="/users">Annuler</a>
</body>
</html>