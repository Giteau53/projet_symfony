<!DOCTYPE html>
<html lang="en">
<head>

  <!-- Basic Page Needs
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta charset="utf-8">
  <title>Ajout tâche</title>
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- Mobile Specific Metas
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- FONT
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">

  <!-- CSS
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="stylesheet" href="/css/normalize.css">
  <link rel="stylesheet" href="/css/skeleton.css">

  <!-- Favicon
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="icon" type="image/png" href="/images/favicon.png">

</head>
<body>
  <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <div class="container">
    <div class="row">
      <div class="one-half column" style="margin-top: 25%">
        <h4>Ajouter une tâche au projet {{project.getName}}</h4>
      </div>
    </div>

    <!-- The above form looks like this -->
    <form action="/project/{{ project.getId }}/tasks/add/save" method="POST">
      <div class="row">
        <div class="six columns">
          <label for="nom">Nom de la tâche</label>
          <input class="u-full-width" type="text"  name="name">
        </div>
        <div class="six columns">
          <label for="description">Description</label>
          <textarea class="u-full-width" type="text"  name="description"></textarea>
        </div>
        <div>
          <label for="debut">Date de début</label>
          <input class="u-full-width" type="date"  name="start_date">
        </div>
        <div>
          <label for="fin">Date de fin</label>
          <input class="u-full-width" type="date"  name="end_date">
        </div>
       <div class="row">
        <div class="column">
          <label for="users">Utilisateurs</label>
          <select class="u-full-width" id="users" name="users">
            {% for user in users %}
                  <option value="{{ user.getId }}" selected>{{ user.getFirstName }} {{ user.getLastName }}</option>
            {% endfor %}
          </select>
        </div>
      </div>
      </div>
      <a href="/project/{{ project.getId }}/tasks" class="button button-primary">Annuler</a>
      <input class="button-primary" type="submit" value="Enregistrer">
    </form>



  </div>

<!-- End Document
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
</body>
</html>